{
  "name": "typescript-cli-starter",
  "version": "1.0.0",
  "description": "Starter code for a CLI using TypeScript",
  "main": "src/index.ts",
  "bin": "build/index.js",
  "scripts": {
    "prebuild": "rm -rf build",
    "build": "tsc",
    "postbuild": "mv build/src build-temp && rm -rf build && mv build-temp build",
    "lint": "prettier --write **/*.ts && eslint --fix **/*.ts",
    "start": "ts-node src/index.ts"
  },
  "keywords": [],
  "author": "Salman Shahzad",
  "license": "ISC",
  "dependencies": {
    "commander": "^5.1.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  }
}
